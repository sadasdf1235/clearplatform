.login_show {
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.login_show .hint {
  width: 80%;
  word-wrap: break-word;
  text-align: center;
  font-weight: 400;
  font-size: 52rpx;
  color: #000000;
}
.login_show .login {
  margin-top: 35rpx;
  margin-bottom: 18.75;
  width: 322.92rpx;
  height: 83.33rpx;
  background: #FFFFFF;
  box-shadow: 0rpx 8rpx 8rpx 0rpx rgba(0, 0, 0, 0.25);
  border-radius: 208rpx 208rpx 208rpx 208rpx;
  border: 4rpx solid #FF6565;
  display: flex;
  align-items: center;
  justify-content: center;
}
.login_show .or {
  margin-top: 18.75rpx;
  position: relative;
}
.login_show .or::before, .login_show .or::after {
  content: "";
  position: absolute;
  top: 50%;
  /* 垂直居中 */
  width: 50%;
  /* 伪元素宽度，可根据需要调整 */
  height: 1px;
  /* 分割线高度 */
  background-color: #000;
  /* 分割线颜色 */
}
.login_show .or::before {
  left: -100%;
  /* 左侧分割线 */
  transform: translateY(-50%);
  /* 上移自身高度的一半 */
}
.login_show .or::after {
  right: -100%;
  /* 右侧分割线 */
  transform: translateY(-50%);
  /* 上移自身高度的一半 */
}
.login_show .wx_login {
  margin-top: 52rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 243.75rpx;
  background: #FFE8A1;
  border-radius: 208rpx;
  font-size: 29rpx;
}
.login_pas {
  width: 100vw;
  height: 100vh;
  background: #FBF9F9;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.login_pas .title {
  font-weight: 400;
  font-size: 83rpx;
  color: #FFE8A1;
}
.login_pas .login_text {
  font-weight: 500;
  font-size: 42rpx;
  color: #000000;
  margin-top: 112rpx;
}
.login_pas .uni-forms {
  width: 80%;
  margin-top: 35.42rpx;
}
.login_pas .uni-forms .uni-easyinput {
  border-radius: 10rpx;
  height: 63rpx;
}
.login_pas .uni-forms .password {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}
.login_pas .uni-forms .password .forget {
  font-weight: 500;
  font-size: 23rpx;
  color: #000000;
}
.login_pas .uni-forms .login_btn {
  background-color: #ffe8a1;
  color: #FBF9F9;
}