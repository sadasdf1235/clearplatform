.container .user_info {
  display: flex;
  justify-content: center;
  align-items: center;
}
.container .user_info .avatar {
  border-radius: 50%;
  width: 228.37rpx;
  height: 228.37rpx;
}
.container .user_info .info {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding-left: 80rpx;
}
.container .user_info .info .name_id {
  display: flex;
  flex-direction: column;
  padding-right: 18rpx;
}
.container .user_info .info .name_id .name {
  font-size: 49.29rpx;
  font-weight: bold;
}
.container .user_info .info .name_id .id {
  font-weight: 400;
  font-size: 35rpx;
  color: #A0A7BA;
}
.container .released {
  height: 75.58rpx;
  margin-top: 40rpx;
  padding: 23.82rpx 26.29rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: linear-gradient(132deg, #FFB4B4 0%, #FF6F6F 100%);
  border-radius: 41rpx;
}
.container .released .des {
  padding: 13.14rpx 0;
  font-weight: bold;
  font-size: 35rpx;
  color: #FFFFFF;
}
.container .released .released_btn {
  background: #FFFFFF;
  border-radius: 82rpx;
  font-weight: bold;
  font-size: 33rpx;
  color: #FF4242;
  margin-right: 0;
}
.container .taskbar {
  padding: 0 22.18rpx;
  margin-top: 80.5rpx;
}
.container .taskbar .task {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 65.72rpx;
}
.container .taskbar .task .left_info {
  display: flex;
  align-items: center;
}
.container .taskbar .task .left_info .loading {
  width: 111.72rpx;
  height: 111.72rpx;
  border-radius: 50%;
  margin-right: 31.22rpx;
  object-fit: cover;
}
.container .taskbar .task .left_info .name {
  font-weight: bold;
  font-size: 38rpx;
  color: #333333;
}